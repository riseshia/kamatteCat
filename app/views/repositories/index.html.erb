<p id="notice"><%= notice %></p>

<h1>Listing Repositories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Full name</th>
      <th>Is target</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.name %></td>
        <td><%= repository.full_name %></td>
        <td><%= repository.is_target_to_s %></td>
        <td><%= link_to 'Go to github', repository.html_url, target: '_blank' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sync Repository', sync_repositories_path, method: :post %>
